<?xml version="1.0"?>
<layout version="0.1.0">
    <customer_account_create translate="label">
        <reference name="head">
            <block type="shopgate_cloudapi/layout" name="styles.update"
                   template="shopgate/cloudapi/header/styles.phtml"/>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template helper="shopgate_cloudapi/frontend_template/getShopgatePageTemplate"/>
            </action>
        </reference>
    </customer_account_create>
    <shopgate_cloudapi_customer_customer_account_create>
        <reference name="root">
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addJs"><script>shopgate/sgEvents.js</script></action>
            <block type="shopgate_cloudapi/customer_account" name="shopgate_cloudapi.customer.account"
                   template="shopgate/cloudapi/header/customer/account/create.phtml"/>
        </reference>
    </shopgate_cloudapi_customer_customer_account_create>
</layout>
