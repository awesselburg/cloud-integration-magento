<?xml version="1.0"?>
<layout version="0.1.0">
    <shopgate_cloudapi_default>
        <reference name="head">
            <block type="shopgate_cloudapi/layout" name="styles.update"
                   template="shopgate/cloudapi/page/html/styles.phtml"/>
            <remove name="head.viewport"></remove>
            <block type="core/text" name="head.viewport.shopgate">
                <action method="setText">
                    <text><![CDATA[<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />]]>&#10;</text>
                </action>
            </block>
        </reference>
        <reference name="root">
            <remove name="header"></remove>
            <remove name="footer"></remove>
            <remove name="global_notices"></remove>
            <remove name="breadcrumbs"></remove>
        </reference>
    </shopgate_cloudapi_default>
</layout>